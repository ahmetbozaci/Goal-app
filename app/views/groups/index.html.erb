 <%= render 'shared/navbar' %>
<div class="container">
  <% @groups.each do |group| %>
    <div class="card my-3">
      <div class="card-body d-flex py-2">
        <div class="pr-5 my-auto">
          <i><%= group.icon %></i>
        </div>
        <div class="mx-auto">
          <p class="mb-0"><%= link_to group.name, group, class:"link-color" %></p>
          <span class="date"><%= group.created_at.strftime("%d %b %Y, %I:%M:%S")%></span>
        </div>
        <div class="my-auto ml-auto ">
          <%= User.find_by_id(group.user_id).name %>
        </div>

      </div>
    </div>
  <% end %>
  <%= link_to "Create Group", create_group_path, class:"btn" %>
</div>
